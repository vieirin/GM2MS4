    "version": "0.2.0",
    "configurations": [
        {
            "name": "nodemon",
            "processId": "${command:PickProcess}",
            "request": "attach",
            "restart": true,
            "skipFiles": ["<node_internals>/**"],
            "stopOnEntry": false,
            "type": "pwa-node",
            "timeout": 10000
        }
    ]
}
